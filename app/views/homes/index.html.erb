<div class="page-header">
  <%= link_to new_home_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Home
  <% end %>
  <h1>| Tiny Estates |</h1>
</div>

<%- @homes.each do |home| %>
  <ul class="list-group">
    <li class="list-group-item">
      <div class="media">
        <div class="media-left">
          <a href="#">
            <%= image_tag("http://clv.h-cdn.co/assets/cm/15/09/54f0d9d889efa_-_01-millertinyhouse-048-edit1-lgn.jpg", size: "72x72") %>
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= home.description %></h4>
          <%= home.city %>, <%= home.state %>  <%= home.zip %>

          <div class="pull-right">
            <%= link_to home do %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% end %>
            <%= link_to edit_home_path(home) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          </div>
          <ul>
          <li>$ <%= home.price %></li>
          </ul>

        </div>
      </div>
    </li>
  </ul>
<% end %>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Bedrooms</th>
        <th>Baths</th>
        <th>Square feet</th>
        <th>Price</th>
        <th>Description</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @homes.each do |home| %>
      <tr>
        <td><%= home.address %></td>
        <td><%= home.city %></td>
        <td><%= home.state %></td>
        <td><%= home.zip %></td>
        <td><%= home.bedrooms %></td>
        <td><%= home.baths %></td>
        <td><%= home.square_feet %></td>
        <td><%= home.price %></td>
        <td><%= home.description %></td>

        <td>
          <%= link_to home do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_home_path(home) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
