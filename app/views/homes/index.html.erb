<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Bedrooms</th>
        <th>Baths</th>
        <th>Square feet</th>
        <th>Price</th>
        <th>Description</th>
        <th>Image data</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @homes.each do |home| %>
      <tr>
        <td><%= home.address %></td>
        <td><%= home.city %></td>
        <td><%= home.state %></td>
        <td><%= home.zip %></td>
        <td><%= home.bedrooms %></td>
        <td><%= home.baths %></td>
        <td><%= home.square_feet %></td>
        <td><%= home.price %></td>
        <td><%= home.description %></td>
        <td><%= home.image_data %></td>
        <td>
          <%= link_to home do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_home_path(home) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
